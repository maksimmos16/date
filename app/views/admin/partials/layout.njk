<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">
    <link rel="shortcut icon" href="/web/images/favicon.ico">
    <!-- Title Page-->
    <title>Admin | {{ title }}</title>

    <!-- Fontfaces CSS-->
    <link href="/admin/css/font-face.css" rel="stylesheet">
    <link href="/admin/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet">
    <link href="/admin/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet">
    <link href="/admin/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet">

    <!-- Date Picker -->
    <link rel="stylesheet" href="/admin/vendor/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/admin/vendor/bootstrap-daterangepicker/daterangepicker.css">

    <!-- Bootstrap CSS-->
    <link href="/admin/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="/admin/vendor/animsition/animsition.min.css" rel="stylesheet">
    <link href="/admin/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet">
    <link href="/admin/vendor/wow/animate.css" rel="stylesheet">
    <link href="/admin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet">
    <link href="/admin/vendor/slick/slick.css" rel="stylesheet">
    <link href="/admin/vendor/select2/select2.min.css" rel="stylesheet">
    <link href="/admin/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet">
    <link href="/admin/css/editor.css" rel="stylesheet">
    <link rel="stylesheet" href="/admin/css/toastr.min.css">
    
    <!-- Main CSS-->
    <link href="/admin/css/theme.css" rel="stylesheet">
    <link href="/admin/css/style.css" rel="stylesheet">
    {% block style %}{% endblock %}
</head>

<body class="animsition">
    <div class="page-wrapper">          
        {% include "admin/partials/sidebar.njk" %}
        <div class="page-container">
            {% include "admin/partials/header.njk" %}         
            <div class="main-content">
                  {% if error.length > 0 %}        
                    <div class="alert alert-danger" role="alert">
                      <p>{{ error }}</p>
                    </div>        
                  {% endif %}
                  {% if success.length > 0 %}
                    <div class="alert alert-success" role="alert">
                      {{ success }}
                    </div>
                  {% endif %}

                  {% for verr in vErrors %}
                    <div class="alert alert-danger" role="alert">
                      {{ verr.msg }}
                    </div>
                  {% endfor %}
                  
                  {% block body %}
                  {% endblock %}
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/admin/vendor/jquery-3.2.1.min.js"></script>
    <!-- daterangepicker -->
    <script src="/admin/vendor/moment/min/moment.min.js"></script>
    <script src="/admin/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="/admin/vendor/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="/admin/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="/admin/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="/admin/vendor/slick/slick.min.js"></script>
    <script src="/admin/vendor/wow/wow.min.js"></script>
    <script src="/admin/vendor/animsition/animsition.min.js"></script>
    <script src="/admin/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="/admin/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="/admin/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="/admin/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="/admin/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="/admin/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="/admin/vendor/select2/select2.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key={{config.googleMapKey}}&libraries=places&language=en"></script> 
    <!-- Main JS-->
    <script src="/admin/js/main.js"></script>
    <script src="/admin/js/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="/admin/js/jquery.validate.js" type="text/javascript"></script>    
    <script type="text/javascript">
        setTimeout(function(){
        $('.alert').slideUp('slow');
        var cells =  $('.alert');
        setTimeout(function(){
          cells.remove();
        },1000);
      },5000);
    </script>
    {% block script %}{% endblock %}
</body>
</html>
<!-- end document-->
